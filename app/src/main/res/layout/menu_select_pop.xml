<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.popup.MenuSelectPop">


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="2023.02.23"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/btn_veterinary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:layout_marginVertical="30dp"
        android:text="병원 방문"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/tv_radius"
        android:backgroundTint="@color/cardview_light_background"
        android:pointerIcon="handwriting"
        />
    <Button
        android:id="@+id/btn_medicine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_veterinary"
        android:layout_marginVertical="30dp"
        android:text="복약일지"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/tv_radius"
        android:backgroundTint="@color/cardview_light_background"
        android:pointerIcon="handwriting"
        />
    <Button
        android:id="@+id/btn_symptom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_medicine"
        android:layout_marginVertical="30dp"
        android:text="증상 메모"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/tv_radius"
        android:backgroundTint="@color/cardview_light_background"
        android:pointerIcon="handwriting"
        />
    <Button
        android:id="@+id/btn_etc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_symptom"
        android:layout_marginTop="30dp"
        android:text="특이사항 기록"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/tv_radius"
        android:backgroundTint="@color/cardview_light_background"
        android:pointerIcon="handwriting"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/btn_etc"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>